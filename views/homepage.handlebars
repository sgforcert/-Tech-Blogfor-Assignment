<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-1 project">
  <div class="col-lg-12 title-date">
    <h2 class="post-title">
      <a href="/comment/{{post.id}}">{{post.title}}</a>
    </h2>
   
    <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-12">
    <p>
      {{post.content}}
    </p>
  </div>

</div>
{{/each}}





