 



<div class="row mb-4 project">

  <div class="col-lg-12 title-date">
    <h2 class="post-title">
      <a href="/">{{title}}</a>
    </h2>
   
    <p>posted by {{user.name}} on {{format_date date_created}}</p>
  </div>

  <div class="col-md-12">
    <p>
      {{content}} 
    </p>
     </div>
</div>


{{#if comments.length}}
  {{#each comments as |comment| }}
    <div class="row mb-4 project">
      <div class="col-lg-12 title-date comment-name-date">
        <p>Comment by {{user.name}}</p>
        <p>on {{format_date comment.date_created}}</p>
       
      </div>
      <div class="col-md-12">
        <p>
          {{comment.comment}}
        </p>
      </div>
    </div>
  {{/each}}
{{/if}}



<div class="row mb-4 project">
  <div class="col-md-12">
    <form class="form comment-form" method="POST" action="/api/comments">
      <div class="form-group">
        <label for="comment-content">Leave a comment</label>
        <textarea class="form-input" id="comment-content" name="comment-content" required></textarea>
      </div>

 <input type="hidden" id="user-id-to-comment">

       <input type="hidden" id="post-id-to-comment" value="{{id}}">
       
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>




<script src="/js/comment.js"></script>